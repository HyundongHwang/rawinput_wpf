    <TextBox Height="22" Margin="158,62,144,0" Name="tbText" VerticalAlignment="Top" ></TextBox>
    <GroupBox Header="Latest Keystroke" Margin="20.3033333333333,97.04,21,0" Name="groupBox1" Height="65.96" VerticalAlignment="Top"></GroupBox>
