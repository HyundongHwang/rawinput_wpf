    <Label HorizontalAlignment="Left" Margin="276.006666666667,122.04,0,0" Name="label4" Width="69.9933333333333" Height="27.96" VerticalAlignment="Top">Virtual Key:</Label>
    <Label Height="29.96" Margin="344.006666666667,119.04,55,0" Name="lbVKey" VerticalAlignment="Top" FontSize="16" Foreground="#FF0000FF"></Label>
    <Label HorizontalAlignment="Left" Margin="77.0066666666667,118.04,0,0" Name="lbKey" Width="171.993333333333" Height="27.96" VerticalAlignment="Top" FontSize="16" Foreground="#FF0000FF"></Label>
    <Label HorizontalAlignment="Left" Margin="38.0066666666667,0,0,120" Name="label5" Width="51.9933333333333" Height="25.96" VerticalAlignment="Bottom">Handle:</Label>
