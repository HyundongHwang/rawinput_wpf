    <Label Height="30.96" Margin="86.006666666667,0,36,85.02" Name="lbName" VerticalAlignment="Bottom" Foreground="#FF0000FF" FontSize="16"></Label>
    <Label Height="25.96" HorizontalAlignment="Left" Margin="35.0066666666667,0,0,56.52" Name="label9" VerticalAlignment="Bottom" Width="80.9933333333333">Device Desc:</Label>
    <Label Height="28.96" Margin="112.006666666667,0,59,56.04" Name="lbDescription" VerticalAlignment="Bottom" Foreground="#FF0000FF" FontSize="16"></Label>
    <Button Height="23" Margin="221,0,259,14" Name="button1" VerticalAlignment="Bottom" Click="CloseMe" CommandTarget="{x:Null}">Close</Button>
    <TextBlock Margin="25,17,169.89,0" Height="34" VerticalAlignment="Top" ClipToBounds="False" LineStackingStrategy="BlockLineHeight" TextWrapping="WrapWithOverflow">Press an key on an attached keyboard, or enter text in the textbox below, to see details of the input device and the key(s) you pressed.</TextBlock>
  </Grid>
</Window>
